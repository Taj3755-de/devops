pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Taj3755-de/devops.git'
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                powershell '''
                    Write-Output "Applying Kubernetes deployment..."
                    kubectl apply -f deployment.yaml
                '''
            }
        }
    }
}
